{
  "$schema": "../node_modules/wrangler/config-schema.json",
  "name": "tiering-integration-test",
  "main": "./tiering-test-worker.ts",
  "compatibility_date": "2026-01-08",
  "compatibility_flags": ["nodejs_compat"],

  // Durable Objects - TieringTestDO with SQLite storage
  "durable_objects": {
    "bindings": [
      {
        "name": "TIERING_TEST_DO",
        "class_name": "TieringTestDO"
      }
    ]
  },

  // Migrations - Enable SQLite for TieringTestDO
  "migrations": [
    {
      "tag": "v1",
      "new_sqlite_classes": ["TieringTestDO"]
    }
  ],

  // R2 Buckets - Warm and Cold tiers
  "r2_buckets": [
    {
      "binding": "R2_WARM",
      "bucket_name": "tiering-test-warm"
    },
    {
      "binding": "R2_COLD",
      "bucket_name": "tiering-test-cold"
    }
  ]
}
