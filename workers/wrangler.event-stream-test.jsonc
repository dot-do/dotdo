{
  "$schema": "../node_modules/wrangler/config-schema.json",
  "name": "event-stream-test",
  "main": "./event-stream-test-worker.ts",
  "compatibility_date": "2025-09-06",
  "compatibility_flags": ["nodejs_compat"],

  // Durable Objects - EventStreamDO with SQLite storage
  "durable_objects": {
    "bindings": [
      {
        "name": "EVENT_STREAM_DO",
        "class_name": "EventStreamDO"
      }
    ]
  },

  // Migrations - Enable SQLite for EventStreamDO
  "migrations": [
    {
      "tag": "v1",
      "new_sqlite_classes": ["EventStreamDO"]
    }
  ]
}
