{
  "name": "@dotdo/cli",
  "version": "0.1.0",
  "type": "module",
  "description": "CLI REPL with TypeScript LSP for dotdo",
  "bin": {
    "dotdo": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./completions": "./dist/completions.js",
    "./rpc-client": "./dist/rpc-client.js",
    "./components": "./dist/components/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.tsx",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run"
  },
  "dependencies": {
    "@inkjs/ui": "^2.0.0",
    "@typescript/vfs": "^1.6.0",
    "chalk": "^5.3.0",
    "ink": "^5.0.1",
    "react": "^18.0.0",
    "typescript": "^5.7.3",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/react": "^18.3.0",
    "@types/ws": "^8.5.13",
    "ink-testing-library": "^4.0.0",
    "tsx": "^4.19.0",
    "vitest": "^3.0.0"
  },
  "peerDependencies": {
    "react": "^18.0.0"
  }
}
