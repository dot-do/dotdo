# fly.io .dockerignore for dotdo

# Dependencies - installed in container
node_modules/
packages/*/node_modules/

# Build outputs - built in container
dist/
*.tsbuildinfo

# Development files
.git/
.gitignore
.github/

# Test files
*.test.ts
*.spec.ts
tests/
__tests__/
coverage/
.nyc_output/

# IDE and editor files
.idea/
.vscode/
*.swp
*.swo
*~

# OS files
.DS_Store
Thumbs.db

# Environment files (secrets managed via fly secrets)
.env
.env.*
!.env.example

# Documentation
*.md
!README.md
docs/

# Example files
examples/

# Deployment configs for other platforms
deploy/helm/
deploy/docker/
deploy/vercel/

# Wrangler local state
.wrangler/
.dev.vars

# Log files
*.log
npm-debug.log*
pnpm-debug.log*

# Temporary files
tmp/
temp/
.tmp/

# TypeScript source maps (optional - comment out if needed for debugging)
# *.map

# Playwright
playwright-report/
test-results/

# beads issue tracker
.beads/
