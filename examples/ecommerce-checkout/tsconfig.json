{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "types": ["@cloudflare/workers-types"],
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "paths": {
      "dotdo": ["../../objects/index.ts"]
    }
  },
  "include": [
    "index.ts",
    "objects/**/*.ts",
    "api/**/*.ts",
    "tests/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
