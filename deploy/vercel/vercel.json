{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "functions": {
    "api/**/*.ts": {
      "runtime": "edge",
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/do/:id/:path*",
      "destination": "/api/do?id=:id&path=:path*"
    },
    {
      "source": "/do/:type/:id/:path*",
      "destination": "/api/do?type=:type&id=:id&path=:path*"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store"
        }
      ]
    }
  ],
  "env": {
    "TURSO_URL": "@turso_url",
    "TURSO_TOKEN": "@turso_token"
  },
  "regions": ["iad1", "sfo1", "cdg1", "hnd1", "syd1"]
}
