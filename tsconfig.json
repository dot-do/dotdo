{
  "compilerOptions": {
    // Build target
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],

    // Type checking
    "types": ["@cloudflare/workers-types", "vite/client"],
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
    "noEmit": true,

    // Module interop
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,

    // JSX support (Hono for API, React for app)
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",

    // Import aliases (baseUrl required for paths to work)
    "baseUrl": ".",
    "paths": {
      "dotdo": ["./index.ts"],
      "dotdo/*": ["./*"],
      // Core libraries (pure, zero deps)
      "@dotdo/fsx": ["./do/capabilities/fsx/core/index.ts"],
      "@dotdo/bashx": ["./do/capabilities/bashx/core/index.ts"],
      // Service layers (Cloudflare DO integration)
      "fsx.do": ["./do/capabilities/fsx/src/index.ts"],
      "fsx.do/*": ["./do/capabilities/fsx/src/*"],
      "bashx.do": ["./do/capabilities/bashx/src/index.ts"],
      "bashx.do/do": ["./do/capabilities/bashx/src/do/index.ts"],
      "bashx.do/*": ["./do/capabilities/bashx/src/*"]
    },

    // Better error messages and IDE experience
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "*.ts",
    "agents/**/*",
    "ai/**/*",
    "api/**/*",
    "auth/**/*",
    "cli/**/*",
    "db/**/*",
    "do/**/*",
    "lib/**/*",
    "objects/**/*",
    "streaming/**/*",
    "types/**/*",
    "workers/**/*",
    "workflows/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "app",
    "examples",
    "packages",
    "primitives",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/tests/**/*.ts",
    "api/tests/**/*",
    "**/spikes/**"
  ]
}
