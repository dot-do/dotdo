{
  "name": "dotdo",
  "version": "0.0.1",
  "type": "module",
  "main": "./index.ts",
  "exports": {
    ".": "./index.ts",
    "./objects": "./objects/index.ts",
    "./objects/*": "./objects/*.ts",
    "./types": "./types/index.ts",
    "./types/*": "./types/*.ts",
    "./snippets": "./snippets/index.ts",
    "./snippets/*": "./snippets/*.ts",
    "./streams": "./streams/index.ts",
    "./streams/*": "./streams/*.sql",
    "./api": "./api/index.ts",
    "./api/*": "./api/*.ts",
    "./docs": "./docs/index.mdx",
    "./docs/*": "./docs/*"
  },
  "files": [
    "index.ts",
    "objects",
    "types",
    "snippets",
    "streams",
    "api",
    "docs"
  ],
  "scripts": {
    "types": "wrangler types worker.d.ts -c wrangler.jsonc",
    "dev": "wrangler dev",
    "dev:app": "cd app && npm run dev",
    "build": "cd app && npm run build",
    "deploy": "npm run build && wrangler deploy",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "typecheck": "tsc --noEmit",
    "typecheck:examples": "tsc -p examples/tsconfig.json",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "better-auth": "^1.4.10",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.6.0",
    "jose": "^6.1.3"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.0.0",
    "@cloudflare/vitest-pool-workers": "^0.8.0",
    "@cloudflare/workers-types": "^4.20241230.0",
    "@playwright/test": "^1.57.0",
    "@types/node": "^25.0.3",
    "@vitest/runner": "^2.0.5",
    "@vitest/snapshot": "^2.0.5",
    "prettier": "^3.7.4",
    "smol-toml": "^1.6.0",
    "typescript": "^5.7.0",
    "vite": "^6.0.0",
    "vitest": "^2.0.5",
    "wrangler": "^3.100.0"
  }
}
