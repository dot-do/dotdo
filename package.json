{
  "name": "dotdo",
  "version": "0.0.1",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "main": "./index.ts",
  "bin": {
    "do": "./cli/bin.ts"
  },
  "types": "./types/index.ts",
  "exports": {
    ".": {
      "types": "./types/index.ts",
      "default": "./index.ts"
    },
    "./tiny": {
      "types": "./types/index.ts",
      "default": "./tiny.ts"
    },
    "./fs": {
      "types": "./types/index.ts",
      "default": "./fs.ts"
    },
    "./git": {
      "types": "./types/index.ts",
      "default": "./git.ts"
    },
    "./bash": {
      "types": "./types/index.ts",
      "default": "./bash.ts"
    },
    "./full": {
      "types": "./types/index.ts",
      "default": "./full.ts"
    },
    "./objects": {
      "types": "./objects/index.ts",
      "default": "./objects/index.ts"
    },
    "./objects/*": "./objects/*.ts",
    "./types": {
      "types": "./types/index.ts",
      "default": "./types/index.ts"
    },
    "./types/*": "./types/*.ts",
    "./snippets": {
      "types": "./snippets/index.ts",
      "default": "./snippets/index.ts"
    },
    "./snippets/*": "./snippets/*.ts",
    "./streams": {
      "types": "./streams/index.ts",
      "default": "./streams/index.ts"
    },
    "./lib": {
      "types": "./lib/index.ts",
      "default": "./lib/index.ts"
    },
    "./lib/*": "./lib/*.ts",
    "./workflows/*": "./workflows/*.ts",
    "./api": {
      "types": "./api/index.ts",
      "default": "./api/index.ts"
    },
    "./api/*": "./api/*.ts",
    "./testing": {
      "types": "./testing/index.ts",
      "default": "./testing/index.ts"
    },
    "./testing/*": "./testing/*.ts",
    "./dist": "./dist",
    "./dist/*": "./dist/*"
  },
  "files": [
    "index.ts",
    "tiny.ts",
    "fs.ts",
    "git.ts",
    "bash.ts",
    "full.ts",
    "objects",
    "types",
    "snippets",
    "streams",
    "lib",
    "workflows",
    "api",
    "testing",
    "dist"
  ],
  "scripts": {
    "types": "wrangler types worker.d.ts -c wrangler.jsonc",
    "dev": "wrangler dev",
    "dev:app": "cd app && npm run dev",
    "build": "cd app && npm run build",
    "deploy": "npm run build && wrangler deploy",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:run": "vitest run --reporter=dot",
    "test:coverage": "vitest run --coverage",
    "test:workers": "vitest --project=workers",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:report": "playwright show-report",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:webkit": "playwright test --project=webkit",
    "test:e2e:mobile": "playwright test --project=mobile-chrome --project=mobile-safari",
    "typecheck": "tsc --noEmit",
    "typecheck:examples": "tsc -p examples/tsconfig.json",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "check": "npm run lint && npm run typecheck",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "db:seed": "npx tsx db/seeds/run.ts",
    "db:seed:integrations": "npx tsx db/seeds/run.ts integrations"
  },
  "dependencies": {
    "@clickhouse/client-web": "^1.8.0",
    "@cloudflare/sandbox": "^0.3.0",
    "@hono/zod-openapi": "^1.2.0",
    "@mdxui/beacon": "^0.2.0",
    "@mdxui/cockpit": "^0.2.0",
    "@mdxui/primitives": "^0.0.0",
    "@mdxui/themes": "^0.0.1",
    "@tanstack/react-router": "^1.144.0",
    "@tanstack/react-start": "^1.145.5",
    "better-auth": "^1.4.10",
    "chdb": "^1.3.0",
    "drizzle-orm": "^0.45.1",
    "fumadocs-core": "^15.0.0",
    "fumadocs-mdx": "^11.0.0",
    "fumadocs-openapi": "^10.2.4",
    "fumadocs-typescript": "^5.0.1",
    "fumadocs-ui": "^15.0.0",
    "hono": "^4.6.0",
    "jose": "^6.1.3",
    "mdxui": "^0.1.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "server-only": "^0.0.1",
    "sqids": "^0.3.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.0.0",
    "@cloudflare/vitest-pool-workers": "0.8.71",
    "@cloudflare/workers-types": "^4.20241230.0",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/vite": "^4.1.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/mdx": "^2.0.0",
    "@types/node": "^25.0.3",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "@vitejs/plugin-react": "^4.4.0",
    "@vitest/runner": "^2.0.5",
    "@vitest/snapshot": "^2.0.5",
    "better-sqlite3": "^12.5.0",
    "eslint": "^9.39.2",
    "globals": "^17.0.0",
    "prettier": "^3.7.4",
    "smol-toml": "^1.6.0",
    "tailwindcss": "^4.1.0",
    "typescript": "^5.7.0",
    "vite": "^6.0.0",
    "vite-tsconfig-paths": "^5.0.0",
    "vitest": "^2.0.5",
    "wrangler": "^3.100.0"
  }
}
