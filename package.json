{
  "name": "dotdo-workspace",
  "version": "2.0.0",
  "description": "Durable Object Framework for Cloudflare Workers - pnpm workspace root",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r --parallel dev",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --config vitest.coverage.config.ts",
    "test:e2e": "vitest run --config vitest.e2e.config.ts",
    "test:e2e:deployed": "TEST_URL=${TEST_URL:-https://api.dotdo.dev} vitest run --config vitest.e2e.config.ts",
    "test:browser": "playwright test",
    "test:browser:ui": "playwright test --ui",
    "test:browser:headed": "playwright test --headed",
    "typecheck": "pnpm -r typecheck",
    "docs": "typedoc",
    "docs:watch": "typedoc --watch",
    "build:docs": "cd app && npm run build",
    "deploy:docs": "wrangler deploy --config wrangler.static.jsonc"
  },
  "keywords": [
    "cloudflare",
    "durable-objects",
    "workers",
    "rpc",
    "workflow",
    "storage",
    "ai",
    "typescript"
  ],
  "author": "dotdo",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dot-do/dotdo.git"
  },
  "homepage": "https://dotdo.dev",
  "bugs": {
    "url": "https://github.com/dot-do/dotdo/issues"
  },
  "dependencies": {
    "hono": "^4.6.0",
    "jose": "^6.1.3",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.8.0",
    "@cloudflare/workers-types": "^4.20250109.0",
    "@playwright/test": "^1.57.0",
    "@vitest/coverage-v8": "^3.0.2",
    "hono": "^4.6.0",
    "tsup": "^8.5.1",
    "typedoc": "^0.28.16",
    "typescript": "^5.7.3",
    "vitest": "3.0.2",
    "wrangler": "^4.0.0"
  },
  "engines": {
    "node": ">=18"
  }
}
