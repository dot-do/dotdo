{
  "name": "dotdo",
  "version": "0.1.1",
  "description": "Business-as-Code framework for autonomous businesses run by AI agents",
  "keywords": [
    "durable-objects",
    "cloudflare",
    "workers",
    "typescript",
    "business-as-code",
    "ai-agents",
    "serverless"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/dot-do/dotdo"
  },
  "author": "dotdo team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.1.0"
  },
  "type": "module",
  "workspaces": [
    "packages/*",
    "core",
    "ai/primitives/packages/*"
  ],
  "main": "./dist/do/index.js",
  "bin": {
    "do": "./cli/bin.js",
    "dotdo": "./cli/bin.js"
  },
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/do/index.d.ts",
      "default": "./dist/do/index.js"
    },
    "./tiny": {
      "types": "./dist/do/tiny.d.ts",
      "default": "./dist/do/tiny.js"
    },
    "./base": {
      "types": "./dist/do/base.d.ts",
      "default": "./dist/do/base.js"
    },
    "./fs": {
      "types": "./dist/do/fs.d.ts",
      "default": "./dist/do/fs.js"
    },
    "./git": {
      "types": "./dist/do/git.d.ts",
      "default": "./dist/do/git.js"
    },
    "./bash": {
      "types": "./dist/do/bash.d.ts",
      "default": "./dist/do/bash.js"
    },
    "./full": {
      "types": "./dist/do/full.d.ts",
      "default": "./dist/do/full.js"
    },
    "./mixins": {
      "types": "./dist/lib/capabilities/index.d.ts",
      "default": "./dist/lib/capabilities/index.js"
    },
    "./objects": {
      "types": "./dist/objects/index.d.ts",
      "default": "./dist/objects/index.js"
    },
    "./objects/*": {
      "types": "./dist/objects/*.d.ts",
      "default": "./dist/objects/*.js"
    },
    "./nouns": {
      "types": "./dist/nouns.d.ts",
      "default": "./dist/nouns.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "default": "./dist/types/index.js"
    },
    "./types/*": {
      "types": "./dist/types/*.d.ts",
      "default": "./dist/types/*.js"
    },
    "./snippets": {
      "types": "./dist/snippets/index.d.ts",
      "default": "./dist/snippets/index.js"
    },
    "./snippets/*": {
      "types": "./dist/snippets/*.d.ts",
      "default": "./dist/snippets/*.js"
    },
    "./streams": {
      "types": "./dist/streams/index.d.ts",
      "default": "./dist/streams/index.js"
    },
    "./lib": {
      "types": "./dist/lib/index.d.ts",
      "default": "./dist/lib/index.js"
    },
    "./lib/*": {
      "types": "./dist/lib/*.d.ts",
      "default": "./dist/lib/*.js"
    },
    "./workflows/*": {
      "types": "./dist/workflows/*.d.ts",
      "default": "./dist/workflows/*.js"
    },
    "./hunch": {
      "types": "./dist/metrics/hunch.d.ts",
      "default": "./dist/metrics/hunch.js"
    },
    "./presets": {
      "types": "./dist/objects/presets/index.d.ts",
      "default": "./dist/objects/presets/index.js"
    },
    "./app": {
      "types": "./dist/do/app.d.ts",
      "default": "./dist/do/app.js"
    }
  },
  "files": [
    "dist",
    "app/dist",
    "cli/*.ts",
    "cli/*.js",
    "cli/commands",
    "cli/runtime",
    "cli/utils",
    "cli/src",
    "cli/package.json",
    "cli/README.md"
  ],
  "scripts": {
    "prepublishOnly": "pnpm run typecheck && pnpm run build && pnpm run build:app",
    "types": "wrangler types types/worker.d.ts -c wrangler.jsonc",
    "dev": "wrangler dev",
    "dev:app": "cd app && pnpm run dev",
    "cli": "bun run cli/bin.js",
    "build": "tsc -p tsconfig.build.json && tsx scripts/fix-esm-imports.ts",
    "build:app": "cd app && pnpm run build",
    "build:metrics": "tsx scripts/build-metrics.ts",
    "build:clean": "rm -rf dist && pnpm run build",
    "deploy": "pnpm run build:app && wrangler deploy",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:run": "vitest run --reporter=dot",
    "test:coverage": "vitest run --coverage",
    "test:workers": "vitest --project=workers",
    "test:e2e": "playwright test -c tests/e2e/playwright.config.ts",
    "test:e2e:ui": "playwright test -c tests/e2e/playwright.config.ts --ui",
    "test:e2e:headed": "playwright test -c tests/e2e/playwright.config.ts --headed",
    "test:e2e:report": "playwright show-report tests/e2e/playwright-report",
    "test:e2e:chromium": "playwright test -c tests/e2e/playwright.config.ts --project=chromium",
    "test:e2e:firefox": "playwright test -c tests/e2e/playwright.config.ts --project=firefox",
    "test:e2e:webkit": "playwright test -c tests/e2e/playwright.config.ts --project=webkit",
    "test:e2e:mobile": "playwright test -c tests/e2e/playwright.config.ts --project=mobile-chrome --project=mobile-safari",
    "typecheck": "tsc --noEmit",
    "typecheck:examples": "tsc -p examples/tsconfig.json",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "check": "pnpm run lint && pnpm run typecheck",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "db:seed": "pnpm tsx db/seeds/run.ts",
    "db:seed:integrations": "pnpm tsx db/seeds/run.ts integrations",
    "changeset": "changeset",
    "version": "changeset version",
    "publish-packages": "tsx scripts/publish.ts",
    "release": "pnpm build && changeset version && pnpm publish-packages",
    "primitives": "tsx scripts/deploy-primitives.ts",
    "primitives:dry": "tsx scripts/deploy-primitives.ts --dry",
    "primitives:cf": "tsx scripts/deploy-primitives.ts --cf",
    "primitives:npm": "tsx scripts/deploy-primitives.ts --npm",
    "submodules": "git submodule update --init --recursive",
    "build:snippets": "tsx scripts/build-snippets.ts",
    "build:snippets:check": "tsx scripts/build-snippets.ts --check",
    "docs:api": "typedoc"
  },
  "dependencies": {
    "@dotdo/core": "workspace:*",
    "digital-workers": "workspace:*",
    "digital-tools": "workspace:*",
    "business-as-code": "workspace:*",
    "@better-auth/stripe": "^1.4.12",
    "@clickhouse/client-web": "^1.8.0",
    "@cloudflare/sandbox": "^0.6.11",
    "@duckdb/duckdb-wasm": "1.33.1-dev18.0",
    "@electric-sql/pglite": "^0.3.14",
    "@hono/zod-openapi": "^1.2.0",
    "@mdxui/beacon": "^2.1.1",
    "@mdxui/cockpit": "^2.1.1",
    "@mdxui/primitives": "^2.1.1",
    "@mdxui/themes": "^2.1.1",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@tanstack/react-router": "^1.149.3",
    "@tanstack/react-start": "^1.149.4",
    "@xterm/addon-attach": "^0.12.0",
    "@xterm/addon-fit": "^0.11.0",
    "@xterm/xterm": "^6.0.0",
    "apache-arrow": "^21.1.0",
    "avsc": "^5.7.9",
    "bashx": "npm:bashx.do@^0.1.1",
    "better-auth": "^1.4.12",
    "bun": "^1.3.6",
    "capnweb": "^0.4.0",
    "chdb": "^1.3.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "commander": "^14.0.2",
    "drizzle-orm": "^0.45.1",
    "fumadocs-core": "^16.4.7",
    "fumadocs-mdx": "^14.2.5",
    "fumadocs-openapi": "^10.2.4",
    "fumadocs-typescript": "^5.0.1",
    "fumadocs-ui": "^16.4.7",
    "hono": "^4.11.4",
    "jose": "^6.1.3",
    "lucide-react": "^0.562.0",
    "mdxui": "^2.1.1",
    "parquet-wasm": "^0.7.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-hook-form": "^7.71.1",
    "recharts": "^3.6.0",
    "server-only": "^0.0.1",
    "sqids": "^0.3.0",
    "tailwind-merge": "^3.4.0",
    "tw-animate-css": "^1.4.0",
    "xstate": "^5.25.0",
    "zod": "^4.3.5"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "jsxSingleQuote": true,
    "tabWidth": 2,
    "useTabs": false,
    "printWidth": 160
  },
  "tsd": {
    "directory": "types/tests",
    "compilerOptions": {
      "esModuleInterop": true,
      "module": "ESNext",
      "moduleResolution": "bundler",
      "strict": true,
      "lib": [
        "ES2022"
      ],
      "types": [
        "@cloudflare/workers-types"
      ]
    }
  },
  "pnpm": {
    "overrides": {
      "esbuild": ">=0.25.0",
      "@smithy/config-resolver": ">=4.4.0",
      "@vitest/expect": "4.0.17",
      "@vitest/runner": "4.0.17",
      "@vitest/snapshot": "4.0.17"
    },
    "ignoredBuiltDependencies": [
      "sharp",
      "workerd"
    ]
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@cloudflare/vite-plugin": "^1.20.3",
    "@cloudflare/vitest-pool-workers": "^0.12.3",
    "@cloudflare/workers-types": "^4.20260114.0",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/vite": "^4.1.0",
    "@tanstack/react-form": "^1.27.7",
    "@tanstack/zod-form-adapter": "^0.42.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/mdx": "^2.0.0",
    "@types/node": "^25.0.8",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "@vitejs/plugin-react": "^4.5.2",
    "@vitest/expect": "3.2.4",
    "@vitest/runner": "^3.2.4",
    "@vitest/snapshot": "^3.2.4",
    "@vitest/spy": "3.2.4",
    "@vitest/utils": "3.2.4",
    "better-sqlite3": "^12.6.0",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",
    "globals": "^17.0.0",
    "jsdom": "^27.4.0",
    "node-sql-parser": "^5.4.0",
    "pgsql-parser": "^17.9.11",
    "prettier": "^3.7.4",
    "smol-toml": "^1.6.0",
    "tailwindcss": "^4.1.0",
    "tsd": "^0.33.0",
    "typedoc": "^0.28.16",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "^5.7.0",
    "vite": "^7.0.0",
    "vite-tsconfig-paths": "^6.0.4",
    "vitest": "^4.0.17",
    "wrangler": "^4.59.1"
  }
}
