{
  "name": "dotdo",
  "version": "0.0.1",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "main": "./do/index.ts",
  "bin": {
    "do": "./cli/bin.ts"
  },
  "types": "./types/index.ts",
  "exports": {
    ".": {
      "types": "./types/index.ts",
      "default": "./do/index.ts"
    },
    "./tiny": {
      "types": "./types/index.ts",
      "default": "./do/tiny.ts"
    },
    "./fs": {
      "types": "./types/index.ts",
      "default": "./do/fs.ts"
    },
    "./git": {
      "types": "./types/index.ts",
      "default": "./do/git.ts"
    },
    "./bash": {
      "types": "./types/index.ts",
      "default": "./do/bash.ts"
    },
    "./full": {
      "types": "./types/index.ts",
      "default": "./do/full.ts"
    },
    "./objects": {
      "types": "./objects/index.ts",
      "default": "./objects/index.ts"
    },
    "./objects/*": "./objects/*.ts",
    "./types": {
      "types": "./types/index.ts",
      "default": "./types/index.ts"
    },
    "./types/*": "./types/*.ts",
    "./snippets": {
      "types": "./snippets/index.ts",
      "default": "./snippets/index.ts"
    },
    "./snippets/*": "./snippets/*.ts",
    "./streams": {
      "types": "./streams/index.ts",
      "default": "./streams/index.ts"
    },
    "./lib": {
      "types": "./lib/index.ts",
      "default": "./lib/index.ts"
    },
    "./lib/*": "./lib/*.ts",
    "./workflows/*": "./workflows/*.ts",
    "./api": {
      "types": "./api/index.ts",
      "default": "./api/index.ts"
    },
    "./api/*": "./api/*.ts",
    "./testing": {
      "types": "./tests/harness/index.ts",
      "default": "./tests/harness/index.ts"
    },
    "./testing/*": "./tests/harness/*.ts",
    "./hunch": {
      "types": "./metrics/hunch.ts",
      "default": "./metrics/hunch.ts"
    },
    "./sdk": {
      "types": "./sdk/index.ts",
      "default": "./sdk/index.ts"
    },
    "./sdk/*": "./sdk/*.ts",
    "./dist": "./dist",
    "./dist/*": "./dist/*"
  },
  "files": [
    "do",
    "objects",
    "types",
    "snippets",
    "streams",
    "lib",
    "workflows",
    "api",
    "tests/harness",
    "metrics",
    "sdk",
    "dist"
  ],
  "scripts": {
    "types": "wrangler types types/worker.d.ts -c wrangler.jsonc",
    "dev": "wrangler dev",
    "dev:app": "cd app && pnpm run dev",
    "build": "cd app && pnpm run build",
    "deploy": "pnpm run build && wrangler deploy",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:run": "vitest run --reporter=dot",
    "test:coverage": "vitest run --coverage",
    "test:workers": "vitest --project=workers",
    "test:e2e": "playwright test -c tests/e2e/playwright.config.ts",
    "test:e2e:ui": "playwright test -c tests/e2e/playwright.config.ts --ui",
    "test:e2e:headed": "playwright test -c tests/e2e/playwright.config.ts --headed",
    "test:e2e:report": "playwright show-report tests/e2e/playwright-report",
    "test:e2e:chromium": "playwright test -c tests/e2e/playwright.config.ts --project=chromium",
    "test:e2e:firefox": "playwright test -c tests/e2e/playwright.config.ts --project=firefox",
    "test:e2e:webkit": "playwright test -c tests/e2e/playwright.config.ts --project=webkit",
    "test:e2e:mobile": "playwright test -c tests/e2e/playwright.config.ts --project=mobile-chrome --project=mobile-safari",
    "typecheck": "tsc --noEmit",
    "typecheck:examples": "tsc -p examples/tsconfig.json",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "check": "pnpm run lint && pnpm run typecheck",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "db:seed": "pnpm tsx db/seeds/run.ts",
    "db:seed:integrations": "pnpm tsx db/seeds/run.ts integrations",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm build && changeset publish"
  },
  "dependencies": {
    "fsx.do": "file:../fsx",
    "gitx": "file:../gitx",
    "@clickhouse/client-web": "^1.8.0",
    "@cloudflare/sandbox": "^0.3.0",
    "@dotdo/landing": "workspace:*",
    "@duckdb/duckdb-wasm": "1.33.1-dev16.0",
    "@electric-sql/pglite": "^0.3.14",
    "@hono/zod-openapi": "^1.2.0",
    "@mdxui/beacon": "^0.2.0",
    "@mdxui/cockpit": "^0.2.0",
    "@mdxui/primitives": "^0.0.0",
    "@mdxui/themes": "^0.0.1",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@tanstack/react-router": "^1.144.0",
    "@tanstack/react-start": "^1.145.5",
    "@xterm/addon-attach": "^0.12.0",
    "@xterm/addon-fit": "^0.11.0",
    "@xterm/xterm": "^6.0.0",
    "apache-arrow": "^21.1.0",
    "avsc": "^5.7.9",
    "bashx": "npm:bashx.do@^0.1.0",
    "better-auth": "^1.4.10",
    "capnweb": "^0.4.0",
    "chdb": "^1.3.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.45.1",
    "fumadocs-core": "^15.0.0",
    "fumadocs-mdx": "^11.0.0",
    "fumadocs-openapi": "^10.2.4",
    "fumadocs-typescript": "^5.0.1",
    "fumadocs-ui": "^15.0.0",
    "hono": "^4.6.0",
    "jose": "^6.1.3",
    "lucide-react": "^0.562.0",
    "mdxui": "^0.1.0",
    "parquet-wasm": "^0.7.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-hook-form": "^7.70.0",
    "recharts": "^3.6.0",
    "server-only": "^0.0.1",
    "sqids": "^0.3.0",
    "tailwind-merge": "^3.4.0",
    "tw-animate-css": "^1.4.0",
    "zod": "^4.3.5"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "jsxSingleQuote": true,
    "tabWidth": 2,
    "useTabs": false,
    "printWidth": 160
  },
  "tsd": {
    "directory": "types/tests",
    "compilerOptions": {
      "esModuleInterop": true,
      "module": "ESNext",
      "moduleResolution": "bundler",
      "strict": true,
      "lib": ["ES2022"],
      "types": ["@cloudflare/workers-types"]
    }
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@cloudflare/vite-plugin": "^1.0.0",
    "@cloudflare/vitest-pool-workers": "0.8.71",
    "@cloudflare/workers-types": "^4.20241230.0",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/vite": "^4.1.0",
    "@tanstack/react-form": "^1.27.7",
    "@tanstack/zod-form-adapter": "^0.42.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/mdx": "^2.0.0",
    "@types/node": "^25.0.3",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "@vitejs/plugin-react": "^4.4.0",
    "@vitest/runner": "^2.0.5",
    "@vitest/snapshot": "^2.0.5",
    "better-sqlite3": "^12.5.0",
    "eslint": "^9.39.2",
    "globals": "^17.0.0",
    "jsdom": "^25.0.1",
    "node-sql-parser": "^5.3.13",
    "pgsql-parser": "^17.9.11",
    "prettier": "^3.7.4",
    "smol-toml": "^1.6.0",
    "tailwindcss": "^4.1.0",
    "tsd": "^0.33.0",
    "typescript": "^5.7.0",
    "vite": "^6.0.0",
    "vite-tsconfig-paths": "^5.0.0",
    "vitest": "^2.0.5",
    "wrangler": "^4.58.0"
  }
}
