{
  "name": "@dotdo/automation",
  "version": "0.1.0",
  "description": "n8n-compatible workflow automation for edge environments with in-memory backend",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./triggers": {
      "types": "./src/triggers.ts",
      "import": "./src/triggers.ts",
      "default": "./src/triggers.ts"
    },
    "./actions": {
      "types": "./src/actions.ts",
      "import": "./src/actions.ts",
      "default": "./src/actions.ts"
    },
    "./nodes": {
      "types": "./src/nodes.ts",
      "import": "./src/nodes.ts",
      "default": "./src/nodes.ts"
    },
    "./workflows": {
      "types": "./src/workflows.ts",
      "import": "./src/workflows.ts",
      "default": "./src/workflows.ts"
    }
  },
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "automation",
    "workflow",
    "n8n",
    "triggers",
    "actions",
    "edge",
    "cloudflare-workers",
    "compatibility"
  ],
  "author": "dotdo",
  "license": "MIT",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.7.0",
    "vitest": "^2.0.0"
  }
}
