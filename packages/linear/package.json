{
  "name": "@dotdo/linear",
  "version": "0.1.0",
  "description": "Linear SDK compatible client for Cloudflare Workers with in-memory backend",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./types": {
      "types": "./src/types.ts",
      "import": "./src/types.ts",
      "default": "./src/types.ts"
    },
    "./backends/memory": {
      "types": "./src/backends/memory.ts",
      "import": "./src/backends/memory.ts",
      "default": "./src/backends/memory.ts"
    }
  },
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest run --config vitest.config.ts",
    "test:watch": "vitest --config vitest.config.ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "linear",
    "issue-tracker",
    "project-management",
    "cloudflare-workers",
    "durable-objects",
    "edge",
    "sdk",
    "compat"
  ],
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  }
}
