{
  "name": "@dotdo/react",
  "version": "1.0.0",
  "type": "module",
  "description": "React hooks and components for dotdo Durable Objects - real-time sync, live queries, and admin UI",
  "author": "dotdo <hello@dotdo.dev>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dotdo-dev/dotdo.git",
    "directory": "packages/react"
  },
  "homepage": "https://dotdo.dev",
  "bugs": {
    "url": "https://github.com/dotdo-dev/dotdo/issues"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./hooks": {
      "types": "./dist/hooks/index.d.ts",
      "import": "./dist/hooks/index.js",
      "require": "./dist/hooks/index.cjs"
    },
    "./tanstack": {
      "types": "./dist/tanstack/index.d.ts",
      "import": "./dist/tanstack/index.js",
      "require": "./dist/tanstack/index.cjs"
    },
    "./admin": {
      "types": "./dist/admin/index.d.ts",
      "import": "./dist/admin/index.js",
      "require": "./dist/admin/index.cjs"
    },
    "./sync": {
      "types": "./dist/sync/index.d.ts",
      "import": "./dist/sync/index.js",
      "require": "./dist/sync/index.cjs"
    }
  },
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "build": "tsup && node scripts/fix-dts-extensions.mjs",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "@dotdo/client": ">=0.3.0",
    "react": ">=18.0.0",
    "zod": ">=3.0.0"
  },
  "peerDependenciesMeta": {
    "zod": {
      "optional": true
    }
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.0",
    "@testing-library/react": "^16.0.0",
    "@types/react": "^19.0.0",
    "@vitejs/plugin-react": "^4.4.0",
    "jsdom": "^25.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tsup": "^8.5.1",
    "typescript": "^5.7.0",
    "vitest": "^2.0.0",
    "zod": "^3.23.0"
  },
  "sideEffects": false,
  "keywords": [
    "dotdo",
    "react",
    "react-hooks",
    "durable-objects",
    "cloudflare",
    "cloudflare-workers",
    "real-time",
    "sync",
    "live-query",
    "websocket",
    "edge",
    "tanstack-query"
  ]
}
