{
  "name": "@dotdo/shopify",
  "version": "0.1.0",
  "description": "Shopify API compatibility layer for edge environments with local implementation support",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./local": {
      "types": "./src/local.ts",
      "import": "./src/local.ts",
      "default": "./src/local.ts"
    }
  },
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "shopify",
    "ecommerce",
    "products",
    "orders",
    "customers",
    "edge",
    "cloudflare-workers",
    "compatibility"
  ],
  "author": "dotdo",
  "license": "MIT",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.7.0",
    "vitest": "^2.0.0"
  }
}
