{
  "name": "@dotdo/client",
  "version": "0.3.0",
  "type": "module",
  "description": "Cap'n Web RPC Client SDK for Durable Objects with automatic promise pipelining",
  "author": "dotdo <hello@dotdo.dev>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dotdo-dev/dotdo.git",
    "directory": "packages/client"
  },
  "homepage": "https://dotdo.dev",
  "bugs": {
    "url": "https://github.com/dotdo-dev/dotdo/issues"
  },
  "keywords": [
    "dotdo",
    "durable-objects",
    "cloudflare",
    "cloudflare-workers",
    "rpc",
    "websocket",
    "client",
    "capnweb",
    "promise-pipelining",
    "edge",
    "real-time",
    "sdk"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./auth": {
      "types": "./dist/auth.d.ts",
      "import": "./dist/auth.js",
      "require": "./dist/auth.cjs"
    },
    "./snippet": {
      "types": "./dist/snippet.d.ts",
      "import": "./dist/snippet.js",
      "require": "./dist/snippet.cjs"
    }
  },
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "capnweb": "^0.4.0"
  },
  "devDependencies": {
    "tsup": "^8.5.1",
    "typescript": "^5.7.0",
    "vitest": "^3.2.4"
  },
  "sideEffects": false
}
