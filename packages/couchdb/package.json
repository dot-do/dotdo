{
  "name": "@dotdo/couchdb",
  "version": "0.1.0",
  "description": "CouchDB-compatible client with pluggable storage backends for Durable Objects",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./backends/memory": {
      "types": "./src/backends/memory.ts",
      "import": "./src/backends/memory.ts",
      "default": "./src/backends/memory.ts"
    }
  },
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest run --config vitest.config.ts",
    "test:watch": "vitest --config vitest.config.ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "couchdb",
    "couch",
    "nosql",
    "database",
    "mapreduce",
    "views",
    "mango",
    "durable-objects",
    "cloudflare-workers"
  ],
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  }
}
