{
  "name": "@dotdo/duckdb-worker",
  "version": "0.1.0",
  "description": "DuckDB WASM optimized for Cloudflare Workers runtime",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "workerd": "./dist/index.js",
      "worker": "./dist/index.js",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./wasm": {
      "types": "./wasm/duckdb-worker.d.ts",
      "default": "./wasm/duckdb-worker.wasm"
    },
    "./loader": {
      "types": "./wasm/duckdb-worker.d.ts",
      "workerd": "./wasm/duckdb-worker-cf.js",
      "worker": "./wasm/duckdb-worker-cf.js",
      "import": "./wasm/duckdb-worker.js",
      "require": "./wasm/duckdb-worker.js"
    },
    "./loader-cf": {
      "types": "./wasm/duckdb-worker-cf.d.ts",
      "import": "./wasm/duckdb-worker-cf.js",
      "require": "./wasm/duckdb-worker-cf.js"
    },
    "./workers": {
      "types": "./dist/index.d.ts",
      "workerd": "./dist/duckdb-workers.mjs",
      "worker": "./dist/duckdb-workers.mjs",
      "default": "./dist/duckdb-workers.mjs"
    }
  },
  "files": [
    "dist",
    "wasm/*.wasm",
    "wasm/*.js",
    "wasm/*.d.ts",
    "README.md"
  ],
  "sideEffects": false,
  "keywords": [
    "duckdb",
    "wasm",
    "cloudflare",
    "workers",
    "sql",
    "analytics",
    "database",
    "olap",
    "edge"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/drivly/dotdo.git",
    "directory": "packages/duckdb-worker"
  },
  "homepage": "https://github.com/drivly/dotdo/tree/main/packages/duckdb-worker#readme",
  "bugs": {
    "url": "https://github.com/drivly/dotdo/issues"
  },
  "author": "Drivly <engineering@driv.ly>",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250109.0",
    "typescript": "^5.0.0",
    "tsup": "^8.0.0"
  },
  "peerDependencies": {
    "apache-arrow": ">=15.0.0"
  },
  "peerDependenciesMeta": {
    "apache-arrow": {
      "optional": true
    }
  },
  "scripts": {
    "build": "tsup",
    "build:workers": "node bundle.mjs",
    "build:workers:size": "node bundle.mjs --size",
    "build:wasm": "cd build && ./build.sh --release",
    "build:wasm:debug": "cd build && ./build.sh --debug",
    "build:wasm:size": "cd build && ./build.sh --size",
    "build:wasm:clean": "cd build && ./build.sh --clean",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build:workers"
  }
}
