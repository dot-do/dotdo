{
  "name": "@dotdo/duckdb-worker",
  "version": "0.1.0",
  "description": "DuckDB WASM optimized for Cloudflare Workers runtime",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": ["dist", "wasm"],
  "keywords": ["duckdb", "wasm", "cloudflare", "workers", "sql", "analytics"],
  "repository": {
    "type": "git",
    "url": "https://github.com/dot-do/duckdb-wasm"
  },
  "license": "MIT",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250109.0",
    "typescript": "^5.0.0",
    "tsup": "^8.0.0"
  },
  "peerDependencies": {
    "apache-arrow": "^18.0.0"
  },
  "scripts": {
    "build": "tsup",
    "build:wasm": "cd build && ./build.sh --release",
    "build:wasm:debug": "cd build && ./build.sh --debug",
    "build:wasm:size": "cd build && ./build.sh --size",
    "build:wasm:clean": "cd build && ./build.sh --clean",
    "typecheck": "tsc --noEmit"
  }
}
