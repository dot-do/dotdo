{
  "name": "@dotdo/benthos",
  "version": "0.1.0",
  "description": "Benthos-compatible stream processing SDK with in-memory backend for edge environments",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./bloblang": {
      "types": "./src/bloblang/parser.ts",
      "import": "./src/bloblang/parser.ts",
      "default": "./src/bloblang/parser.ts"
    }
  },
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "benthos",
    "stream-processing",
    "bloblang",
    "message-queue",
    "edge",
    "cloudflare-workers",
    "in-memory",
    "pipeline"
  ],
  "author": "dotdo",
  "license": "MIT",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.7.0",
    "vitest": "^2.0.0"
  }
}
