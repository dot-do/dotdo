{
  "name": "@dotdo/shared",
  "version": "0.1.0",
  "type": "module",
  "description": "Shared utilities and event emitters for dotdo packages",
  "author": "dotdo <hello@dotdo.dev>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dotdo-dev/dotdo.git",
    "directory": "packages/shared"
  },
  "homepage": "https://github.com/dotdo-dev/dotdo/tree/main/packages/shared#readme",
  "bugs": {
    "url": "https://github.com/dotdo-dev/dotdo/issues"
  },
  "keywords": [
    "dotdo",
    "shared",
    "event-emitter",
    "utilities",
    "typescript"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./event-emitter": {
      "types": "./dist/event-emitter.d.ts",
      "import": "./dist/event-emitter.js",
      "require": "./dist/event-emitter.cjs"
    }
  },
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "tsup": "^8.5.1",
    "typescript": "^5.7.0",
    "vitest": "^3.2.0"
  },
  "sideEffects": false
}
