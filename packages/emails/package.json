{
  "name": "@dotdo/emails",
  "version": "0.1.0",
  "description": "Email service with SendGrid/Resend API compatibility for edge environments",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./sendgrid": {
      "types": "./src/sendgrid.ts",
      "import": "./src/sendgrid.ts",
      "default": "./src/sendgrid.ts"
    },
    "./resend": {
      "types": "./src/resend.ts",
      "import": "./src/resend.ts",
      "default": "./src/resend.ts"
    },
    "./providers": {
      "types": "./src/providers.ts",
      "import": "./src/providers.ts",
      "default": "./src/providers.ts"
    },
    "./templates": {
      "types": "./src/templates.ts",
      "import": "./src/templates.ts",
      "default": "./src/templates.ts"
    },
    "./webhooks": {
      "types": "./src/webhooks.ts",
      "import": "./src/webhooks.ts",
      "default": "./src/webhooks.ts"
    }
  },
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "email",
    "sendgrid",
    "resend",
    "mailchannels",
    "transactional",
    "edge",
    "cloudflare-workers",
    "compatibility"
  ],
  "author": "dotdo",
  "license": "MIT",
  "dependencies": {
    "hono": "^4.0.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.7.0",
    "vitest": "^2.0.0"
  }
}
