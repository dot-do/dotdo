{
  "name": "@dotdo/twilio",
  "version": "0.1.0",
  "type": "module",
  "description": "Twilio SDK compatible layer for Cloudflare Workers - drop-in replacement for twilio",
  "author": "dotdo <hello@dotdo.dev>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dotdo-dev/dotdo.git",
    "directory": "packages/twilio"
  },
  "homepage": "https://github.com/dotdo-dev/dotdo/tree/main/packages/twilio#readme",
  "bugs": {
    "url": "https://github.com/dotdo-dev/dotdo/issues"
  },
  "keywords": [
    "dotdo",
    "twilio",
    "sms",
    "mms",
    "voice",
    "whatsapp",
    "verify",
    "messaging",
    "cloudflare",
    "workers",
    "edge"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./sms": {
      "types": "./dist/sms.d.ts",
      "import": "./dist/sms.js",
      "require": "./dist/sms.cjs"
    },
    "./whatsapp": {
      "types": "./dist/whatsapp.d.ts",
      "import": "./dist/whatsapp.js",
      "require": "./dist/whatsapp.cjs"
    },
    "./voice": {
      "types": "./dist/voice.d.ts",
      "import": "./dist/voice.js",
      "require": "./dist/voice.cjs"
    },
    "./verify": {
      "types": "./dist/verify.d.ts",
      "import": "./dist/verify.js",
      "require": "./dist/verify.cjs"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "import": "./dist/types.js",
      "require": "./dist/types.cjs"
    }
  },
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250124.0",
    "tsup": "^8.5.1",
    "typescript": "^5.7.0",
    "vitest": "^2.0.0"
  },
  "peerDependencies": {
    "@cloudflare/workers-types": ">=4.0.0"
  },
  "peerDependenciesMeta": {
    "@cloudflare/workers-types": {
      "optional": true
    }
  },
  "sideEffects": false
}
